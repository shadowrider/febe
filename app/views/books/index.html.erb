<div id="books" class="span-18 last">
    <h2>All available Books for Sale:</h2>
    <hr class="header_line">
    <a href="#" id="add_book">Add Book</a>
    <%= render @books %>
</div>
<table style="display: none;">
  <tr>
    <th>Isbn</th>
    <th>Title</th>
    <th>Description</th>
    <th>Image url</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.isbn %></td>
    <td><%= book.title %></td>
    <td><%= book.image_url %></td>
    <td><%= book.price %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />
<div id="modal_w" style="display: none">
    <%= form_for Book.new, :remote => true do |f| %>
      <div class="field">
        <%= f.label :isbn, "ISBN" %><br />
        <%= f.text_field :isbn %>
      </div>
      <div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :author %><br />
        <%= f.text_field :author %>
      </div>
      <div class="field">
        <%= f.label :course %><br />
        <%= f.text_field :course %>
      </div>
      <div class="field">
        <%= f.label :condition %><br />
        <%= f.select(:condition, [['As New',"As New"],['Fine','Fine'],['Good','Good'],['Fair','Fair'],['Poor','Poor']]) %>
      </div>
      <div class="field" style="display: none">
        <%= f.label :is_for_sale %><br />
        <%= f.select(:is_for_sale, [['Yes',true],['No',false]]) %>
      </div>
      <div class="field">
        <%= f.label :cover %><br />
        <%= f.file_field :cover %>
      </div>
      <div class="field">
        <%= f.label :price %><br />
        <%= f.text_field :price %>
      </div>
      <div class="actions">
        <%= f.submit "Add book", :class => 'menu_item push-5' %>
      </div>
    <% end %>
</div>


