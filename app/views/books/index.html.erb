<h2>All available Books for Sale:</h2>
<hr class="header_line">
<% @books.each do |book| %>
    <div id="book" class="book_item span-18 last">
        <h3 class="title span-18 last"><%= book.title %></h3>
        <div class="span-2"><%= image_tag(book.image_url, class: 'cover_image') %></div>
        <div class="span-13">
          <ul class="book_information">
            <li>by <%= book.author %></li>
            <li>Course: <%= book.course %></li>
            <li>Condition: <%= book.condition %></li>
          </ul>
        </div>
        <div class="span-3 last">
          <ul class="book_information">
            <li class="price"><%= number_to_currency(book.price) %></li>
            <li><a class="contact-image" href="#"><%= image_tag("email.png", alt: "Contact the Seller") %></a></li>
          </ul>
        </div>
    </div>
<% end %>
<table>
  <tr>
    <th>Isbn</th>
    <th>Title</th>
    <th>Description</th>
    <th>Image url</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.isbn %></td>
    <td><%= book.title %></td>
    <td><%= book.image_url %></td>
    <td><%= book.price %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

